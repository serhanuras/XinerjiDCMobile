<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/RelativeGridLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:descendantFocusability="blocksDescendants"
        >

        <GridView
            android:id="@+id/frame_upload_image_gridviewimg"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:numColumns="2"
            android:scrollbarStyle="outsideInset"
            android:smoothScrollbar="true"
            android:verticalSpacing="10dp"
            android:paddingBottom="50dp"
            android:paddingTop="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/RelativeGridLayout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <Button
            android:id="@+id/frame_upload_image_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundshapelogonbtn"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Belge Fotoğraf Çek" />
    </RelativeLayout>

</RelativeLayout>