<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_list_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="5dp"
        android:paddingLeft="12sp"
        android:text="Ürün Adı / Ürün Kodu"
        android:textSize="10sp"
        android:textColor="#5f97f2"
        />

    <TextView
        android:id="@+id/product_list_tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="5dp"
        android:text="Sprite, 1000 ml, 12 li / SP-1000-12"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:layout_below="@id/product_list_tv_title"

        />


    <TextView
        android:id="@+id/product_list_tv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#a8a8a8"
        android:textSize="14sp"
        android:layout_below="@+id/product_list_tv_value"
        />

    <TextView
        android:id="@+id/product_list_tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="5dp"
        android:paddingRight="12sp"
        android:text="Ürün Adet"
        android:textSize="10sp"
        android:textColor="#5f97f2"
        />

    <TextView
        android:id="@+id/product_list_tv_value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="5dp"
        android:text="25"
        android:paddingRight="20dp"
        android:textSize="14sp"
        android:layout_below="@id/product_list_tv_title2"

        />


</RelativeLayout>