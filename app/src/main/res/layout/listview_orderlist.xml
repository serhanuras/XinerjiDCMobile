<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/listview_orderlist_img_ok"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:background="@drawable/notok"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/listview_orderlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şirket / Şube"
        android:textSize="12sp"
        android:paddingLeft="50dp"
        android:paddingTop="15dp"
        android:textColor="#a8a8a8"/>

    <TextView
        android:id="@+id/listview_orderlist_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Migros Market"
        android:textSize="13sp"
        android:layout_below="@+id/listview_orderlist_title"
        android:paddingLeft="50dp" />

    <TextView
        android:id="@+id/listview_orderlist_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview_orderlist_company"
        android:text="Bakırköy"
        android:textSize="10sp"
        android:paddingBottom="5dp"
        android:paddingLeft="50dp"
        android:textColor="#5f97f2"
        />


    <ImageView
        android:id="@+id/listview_orderlist_arrow"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/arrows"
        android:layout_marginRight="15dp"/>




</RelativeLayout>